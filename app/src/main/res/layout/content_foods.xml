<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.jonsmauricio.eyesfood.ui.FoodsActivity"
android:orientation="vertical"
tools:showIn="@layout/activity_foods">

<ImageView
    android:id="@+id/ivPrueba"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"/>

<TextView
    android:id="@+id/tvInfoGeneral"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"/>

<TextView
    android:id="@+id/tvInfoNutricional"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"/>

<TextView
    android:id="@+id/tvIngredientes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"/>

<TextView
    android:id="@+id/tvAditivos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"/>

<ListView
    android:id="@+id/lvAditivos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</ListView>

</LinearLayout>
